{
  "manifest_version": 2,

  "name": "Site Background",
  "description": "Set wallpapers from Wallhaven as background to all sites",
  "version": "1.3",

  "permissions": [
    "file:///*",
    "tabs",
    "storage",
    "http://*.wallhaven.cc/",
    "https://*.wallhaven.cc/"
  ],

  "background": {
    "scripts": ["jquery-1.11.1.js", "common.js", "background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "logo19.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "64": "logo64.png",
      "128": "logo128.png"
    }
  },

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-1.11.1.js", "common.js", "script.js"]
    }
  ]
}